      <!-- CALCULAR TOTAL -->
      <script>
        function calculateTotal() {
          var metro = parseInt(document.getElementById("metros").value);
          var prec = 660;
          var total = metro * prec;
          var pag = 0;
          var sald = total;
          var estado = "SINPAGO"
          var responsabilidad = "Humberto Giron"
          var email ="geniosmarketinghn@gmail.com"
          document.getElementById("total").value = total;
          document.getElementById("pago").value = pag;
          document.getElementById("saldo").value = sald;
          document.getElementById("estado1").value = estado;
          document.getElementById("responsable").value = responsabilidad;
          document.getElementById("destinatario").value = email;
        }
      </script>
      <!-- CONDICIONES DE MOSTAR SI QUIEREN CONSTANCIA Y OCULATAR SI NO QUIEREN CONSTANCIA -->
      <script>
        function showHideFields() {
          var radioButton = document.querySelector(
            'input[name="constancia"]:checked'
          ).value;
          var empresa = document.getElementById("empresa");
          var rtn = document.getElementById("rtn");
          if (radioButton === "Si") {
            empresa.style.display = "block";
            rtn.style.display = "block";
          } else {
            empresa.style.display = "none";
            rtn.style.display = "none";
          }
        }
